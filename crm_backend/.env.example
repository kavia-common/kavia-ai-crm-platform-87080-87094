# Database configuration for CRM Backend (FastAPI)
# Copy this file to .env and set appropriate values for your environment.

# SQLAlchemy-compatible database URL.
# Examples:
# - PostgreSQL: postgresql+psycopg2://USER:PASSWORD@HOST:5432/DBNAME
# - SQLite (dev only): sqlite:///./crm_dev.db
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/kavia_crm

# Optional pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# App settings
APP_ENV=development
APP_NAME=Kavia AI CRM Backend
